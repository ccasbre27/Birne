<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Birne.MobileApp.Views.EmptyPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#03A9F4"
             BackgroundImage="bg_prototipo.png">
    <ContentPage.Content>

        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

            <Label x:Name="centerLabel"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   Text="¡Oh!&#x0A;Recuerda que estás viendo un prototipo.&#x0A;Esta sección estará disponible pronto en nuestra solución."
                   TextColor="Black" />


            <Image HorizontalOptions="Center"
                   Source="sin_intermediarios.png"
                   VerticalOptions="End"
                   WidthRequest="150" />

        </Grid>
    </ContentPage.Content>
</ContentPage>